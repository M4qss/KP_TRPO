<Window x:Class="DentIS.AutForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentIS"
        mc:Ignorable="d"
        Title="AutForm" Height="300" Width="294.538">
    <Grid Background="#FFABD9DB" Margin="0,0,-1,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="EnterBtn" Content="ВОЙТИ" HorizontalAlignment="Center" Margin="10,201,16,0" VerticalAlignment="Top" Width="257" Height="53" Padding="1" FontSize="36" FontFamily="Consolas" Background="#FF6CB4B7" Foreground="White" Click="EnterBtn_Click"/>
        <TextBox x:Name="loginTb" HorizontalAlignment="Left" Height="33" Margin="10,30,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="259" FontSize="20" GotFocus="TextBox_GotFocus" LostFocus="LoginTb_LostFocus" Foreground="#FF7E7E7E"/>
        <TextBox x:Name="passwordTb" HorizontalAlignment="Left" Height="32" Margin="10,79,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="259" FontSize="20" GotFocus="PasswordTb_GotFocus" LostFocus="PasswordTb_LostFocus" Foreground="#FF7E7E7E"/>

    </Grid>
</Window>
